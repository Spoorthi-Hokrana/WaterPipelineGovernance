{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "app/**/*.{js,ts,jsx,tsx}": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_THIRDWEB_CLIENT_ID": "@thirdweb_client_id",
    "NEXT_PUBLIC_CONTRACT_ADDRESS": "@contract_address",
    "NEXT_PUBLIC_APP_NAME": "Water Pipeline Governance",
    "NEXT_PUBLIC_DEFAULT_CHAIN_ID": "1287"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_THIRDWEB_CLIENT_ID": "@thirdweb_client_id",
      "NEXT_PUBLIC_CONTRACT_ADDRESS": "@contract_address",
      "NEXT_PUBLIC_APP_NAME": "Water Pipeline Governance",
      "NEXT_PUBLIC_DEFAULT_CHAIN_ID": "1287"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://*.thirdweb.com https://*.walletconnect.org; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://*.thirdweb.com https://*.walletconnect.org https://rpc.api.moonbase.moonbeam.network wss://*.walletconnect.org; frame-src 'self' https://*.thirdweb.com;"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ]
}
